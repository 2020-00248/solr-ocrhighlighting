<config>
  <luceneMatchVersion>${tests.luceneMatchVersion:LUCENE_CURRENT}</luceneMatchVersion>
  <dataDir>${solr.data.dir:}</dataDir>
  <directoryFactory name="DirectoryFactory" class="${solr.directoryFactory:solr.RAMDirectoryFactory}"/>
  <schemaFactory class="ClassicIndexSchemaFactory"/>

  <requestHandler name="/select" class="solr.SearchHandler">
    <arr name="components">
      <str>query</str>
      <str>ocr_highlight</str>
    </arr>
  </requestHandler>

  <searchComponent class="de.digitalcollections.solrocr.solr.HighlightComponent" name="ocr_highlight"
                  ocrFormat="de.digitalcollections.solrocr.formats.hocr.HocrFormat">
    <lst name="ocrFields">
      <str>ocr_text</str>
    </lst>
    <fieldLoader class="de.digitalcollections.solrocr.lucene.fieldloader.PathFieldLoader" encoding="utf8">
      <lst name="externalFields">
        <str name="ocr_text">src/test/resources/data/hocr_utf8.html</str>
      </lst>
    </fieldLoader>
  </searchComponent>
</config>
